.people
  display flex
  justify-content space-between
  margin 1rem 0

.person
  background rgba(255,255,255,0.07)
  padding 1rem
  width 48%
  h3
    margin 0
    font-size 2rem
    em
      font-size 1rem

.avatar
  border-radius 50%
  width 80px
  float left
  margin-right 20px
  border 3px solid white
  box-shadow inset 0 0 10px red
